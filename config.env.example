# AROI Validator Configuration
# Copy to config.env and edit. Never commit secrets!

# === Cloudflare ===
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token
PAGES_PROJECT_NAME=aroivalidator
CUSTOM_DOMAIN=                            # Optional: your.domain.com

# === Storage Order ===
STORAGE_ORDER=do,r2                       # DO primary, R2 backup
CLOUD_UPLOAD=true                         # Enable cron uploads

# === DigitalOcean Spaces (Primary) ===
DO_ENABLED=true
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_BUCKET=aroivalidator-data
DO_SPACES_REGION=nyc3                     # nyc3, sfo3, ams3, sgp1, fra1
DO_SPACES_CDN=false                       # true = CDN (cached), false = origin

# === Cloudflare R2 (Backup) ===
R2_ENABLED=true
R2_ACCESS_KEY_ID=your_r2_key
R2_SECRET_ACCESS_KEY=your_r2_secret
R2_BUCKET=aroivalidator-data

# === Cache TTL (seconds) ===
CACHE_TTL_LATEST=60                       # latest.json, files.json (updates hourly)
CACHE_TTL_HISTORICAL=31536000             # Historical files (1 year, immutable)

# === Rclone ===
RCLONE_PATH=$HOME/bin/rclone
RCLONE_TRANSFERS=128                      # R2 (no rate limit)
RCLONE_CHECKERS=256
DO_RCLONE_TRANSFERS=56                    # DO (rate limited)
DO_RCLONE_CHECKERS=80

# === Paths ===
OUTPUT_DIR=$HOME/aroivalidator-deploy/public
BACKUP_DIR=$HOME/aroivalidator-deploy/backups

# === Optional: Legacy VPS/Caddy ===
# DEPLOY_IP=
# DEPLOY_DOMAIN=
# DEPLOY_EMAIL=
